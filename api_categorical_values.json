  "example_requests": {
    "property_damage_prediction": {
      "endpoint": "/api/v1/impact/property-damage",
      "method": "POST",
      "body": {
        "event_type": "Thunderstorm Wind",
        "state": "TX",
        "magnitude": 65.0,
        "duration_hours": 1.5
      }
    },
    "casualty_risk_prediction": {
      "endpoint": "/api/v1/impact/casualty-risk",
      "method": "POST",
      "body": {
        "event_type": "Tornado",
        "state": "OK",
        "magnitude": 150.0,
        "tor_f_scale": "EF3"
      }
    },
    "scenario_simulation": {
      "endpoint": "/api/v1/simulation/scenario",
      "method": "POST",
      "body": {
        "base_event": {
          "event_type": "Tornado",
          "state": "OK",
          "magnitude": 150.0
        },
        "modifications": [
          {
            "parameter": "magnitude",
            "modification_type": "multiply",
            "value": 1.5
          }
        ],
        "include_uncertainty": true
      }
    }
  }
